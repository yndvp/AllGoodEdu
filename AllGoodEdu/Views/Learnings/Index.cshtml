@model IEnumerable<AllGoodEdu.Models.Category>

@{ ViewData["Title"] = "Travel our Courses";
}

<h1>Travel our Courses</h1>
<section class="row card-group">
    @foreach (var c in Model)
    {
        <div class="col-sm-6 col-lg-4 mb-3">
            <div class="card mb-4 text-center" h-100>
                <div class="card-body">
                    <a asp-controller="Learnings" asp-action="LearnByCategory" asp-route-id="@c.CategoryId">
                        @c.Name
                    </a>
                </div>
            </div>
        </div>
    }
</section>
